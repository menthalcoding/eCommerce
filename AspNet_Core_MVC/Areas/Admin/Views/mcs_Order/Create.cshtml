		@Html.TextBoxFor(model => model.Cost)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Tax)
    </div>
    <div class="editor-field">
		@Html.TextBoxFor(model => model.Tax)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Total)
    </div>
