        @Html.LabelFor(model => model.Paid)
    </div>
    <div class="editor-field">
		@Html.CheckBoxFor(model => model.Paid.Value, Model.Paid)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Currency)
    </div>
    <div class="editor-field">
		@Html.TextBoxFor(model => model.Currency)
